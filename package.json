{
  "name": "pandapage",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "test": "cd packages/pandapage && bun test",
    "test:all": "cd packages/pandapage && bun test:all && cd ../demo && bun test:e2e",
    "prepare": "simple-git-hooks",
    "sync-docs": "bun scripts/sync-documents.js"
  },
  "simple-git-hooks": {
    "pre-commit": "cd packages/pandapage && bun run precommit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5"
  }
}
