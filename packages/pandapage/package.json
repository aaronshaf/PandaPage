{
  "name": "@pandapage/pandapage",
  "version": "1.0.0",
  "module": "index.ts",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "bun run index.ts",
    "build": "bun build ./index.ts --outdir ./dist --target node",
    "test": "bun test --ignore '**/*.spec.ts'",
    "test:unit": "LOG_LEVEL=None bun test test/unit/*.ts",
    "test:deterministic": "LOG_LEVEL=None bun test test/deterministic/*.ts",
    "test:ai": "LOG_LEVEL=None bun test test/ai --timeout 30000",
    "test:ai-verbose": "LOG_LEVEL=AI bun test test/ai --timeout 30000",
    "test:ai-debug": "LOG_LEVEL=Debug bun test test/ai --timeout 30000",
    "test:ci": "LOG_LEVEL=None bun test test/deterministic",
    "ci:ai": "LOG_LEVEL=None bun test test/ai --timeout 30000",
    "test:all": "bun test && bun test:browser",
    "test:debug": "LOG_LEVEL=Debug bun test",
    "test:verbose": "LOG_LEVEL=All bun test",
    "test:browser": "playwright test",
    "test:browser:ui": "playwright test --ui",
    "test:server": "bun run test-server/server.ts",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "precommit": "bun run typecheck && bun run test:unit && bun run test:det && rm -rf dist",
    "test:det": "LOG_LEVEL=None bun test test/deterministic/*.ts",
    "build:workers": "bun build ./src/workers/*.worker.ts --outdir ./dist/workers --target browser --format esm"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@playwright/test": "^1.53.2",
    "@types/bun": "latest",
    "@xmldom/xmldom": "^0.9.8",
    "happy-dom": "^18.0.1",
    "playwright": "^1.53.2",
    "typescript": "^5"
  },
  "dependencies": {
    "@effect/platform-browser": "^0.67.7",
    "@effect/schema": "^0.75.5",
    "@pandapage/parser": "workspace:*",
    "@pandapage/renderer-markdown": "workspace:*",
    "@pandapage/renderer-dom": "workspace:*",
    "effect": "^3.16.12",
    "fflate": "^0.8.2"
  }
}
