{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "noImplicitReturns": false,
    "exactOptionalPropertyTypes": false,

    // Path mappings for workspace packages
    "paths": {
      "@browser-document-viewer/parser": ["../parser/src/index.ts"],
      "@browser-document-viewer/parser/*": ["../parser/src/*"],
      "@browser-document-viewer/renderer-markdown": ["../renderer-markdown/src/index.ts"],
      "@browser-document-viewer/renderer-markdown/*": ["../renderer-markdown/src/*"],
      "@browser-document-viewer/renderer-dom": ["../renderer-dom/src/index.ts"],
      "@browser-document-viewer/renderer-dom/*": ["../renderer-dom/src/*"]
    }
  }
}
