{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // Path mappings for workspace packages
    "paths": {
      "@pandapage/parser": ["./packages/parser/src/index.ts"],
      "@pandapage/parser/*": ["./packages/parser/src/*"],
      "@pandapage/renderer-markdown": ["./packages/renderer-markdown/src/index.ts"],
      "@pandapage/renderer-markdown/*": ["./packages/renderer-markdown/src/*"],
      "@pandapage/renderer-dom": ["./packages/renderer-dom/src/index.ts"],
      "@pandapage/renderer-dom/*": ["./packages/renderer-dom/src/*"],
      "@pandapage/pandapage": ["./packages/pandapage/src/index.ts"],
      "@pandapage/pandapage/*": ["./packages/pandapage/src/*"]
    }
  }
}
